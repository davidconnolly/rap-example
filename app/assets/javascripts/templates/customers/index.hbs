<div class="row">
  <div class="col-md-offset-1 page-header">
    <h1>
      Customers

      {{#link-to "customers.new" classNames="btn btn-sm btn-primary"}}
        <i class="fa fa-plus"></i>
        Add Customer
      {{/link-to}}
    </h1>
  </div>
</div>

{{#each customer in customers}}
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3>
        <i class="fa fa-male"></i>
        {{customer.name}}
        <a href="#" class="btn btn-sm" {{action 'deleteCustomer' customer}}><i class="fa fa-times"></i></a>

        {{#link-to "vehicles.new" customer_idBinding="customer.id" classNames="btn btn-sm btn-primary pull-right"}}
          <i class="fa fa-plus"></i>
          Add Vehicle
        {{/link-to}}
      </h3>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th width="10px" class="center">#</th>
            <th width="50%">Year</th>
            <th width="50%">Make</th>
            <th width="10px">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each vehicle in customer.vehicles}}
            <tr>
              <td class="center">{{vehicle.id}}</td>
              <td>{{vehicle.year}}</td>
              <td>{{vehicle.make}}</td>
              <td class="center">
                <a href="#" class="btn btn-sm" {{action 'deleteVehicle' vehicle}}><i class="fa fa-times"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{/each}}
